    "/api/Account/Verify-otp": {
      "post": {
        "tags": [
          "Account"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OTPVerification"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/OTPVerification"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/OTPVerification"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "properties": {
          "emailOrPhone": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "OTPVerification": {
        "type": "object",
        "properties": {
          "otp": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}